@inherits LayoutComponentBase

<MudThemeProvider Theme="_theme" />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="1" Class="mobile-app-bar">
        <MudText Typo="Typo.h6" Class="app-title">
            <MudIcon Icon="@Icons.Material.Filled.LocalHospital" Class="mr-2" />
            REALITi
        </MudText>
        <MudSpacer />
    </MudAppBar>
    
    <MudMainContent Class="mobile-main-content">
        <div class="content-container">
            @Body
        </div>
    </MudMainContent>
</MudLayout>

@code {
    private readonly MudTheme _theme = new()
    {
        Palette = new PaletteLight()
        {
            Primary = "#1976d2",          
            Secondary = "#dc004e",        
            Success = "#4caf50",          
            Warning = "#ff9800",          
            Error = "#f44336",            
            Info = "#2196f3",             
            Background = "#f5f7fa",       
            Surface = "#ffffff",          
            AppbarBackground = "#1976d2", 
            TextPrimary = "#212121",      
            TextSecondary = "#757575"     
        },
        Typography = new Typography()
        {
            Default = new Default()
            {
                FontFamily = new[] { "Roboto", "Arial", "sans-serif" },
                FontSize = "0.875rem",
                FontWeight = 400,
                LineHeight = 1.43,
                LetterSpacing = "0.01071em"
            },
            H6 = new H6()
            {
                FontSize = "1.25rem",
                FontWeight = 500,
                LineHeight = 1.6,
                LetterSpacing = "0.0075em"
            }
        }
    };
}
